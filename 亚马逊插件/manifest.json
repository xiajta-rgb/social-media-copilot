{
  "manifest_version": 3,
  "name": "亚马逊助手",
  "version": "2.0",
  "description": "提供账号管理、提示词管理和常用工具",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs",
    "scripting",
    "downloads",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "*://www.doubao.com/*"
      ],
      "js": [
        "content-scripts/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "亚马逊助手，你的好帮手",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "test-shortcut.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "open-search": {
      "description": "打开提示词搜索界面",
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      }
    }
  }
}